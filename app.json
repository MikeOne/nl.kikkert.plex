{
    "id": "nl.kikkert.plex",
    "version": "1.0.3",
    "compatibility": "0.x || 1.x",
    "name": {
        "en": "Plex",
        "nl": "Plex"
    },
    "description": {
        "en": "Control a plex media server with your Homey",
        "nl": "Bestuur plex media server met je homey"
    },
    "category": "video",
    "images": {
        "large": "assets/images/large.png",
        "small": "assets/images/small.png"
    },
    "author": {
        "name": "Michiel Kikkert",
        "email": "michiel@kikkert.nl"
    },
    "contributors": {
        "developers": [
            {
                "name": "Michiel Kikkert",
                "email": "michiel@kikkert.nl"
            },
            {
                "name": "Phillip Johnsen",
                "email": "phillip@lightweight.no"
            },
            {
                "name": "Greg Laabs",
                "email": "OverloadUT@gmail.com"
            }
        ]
    },
    "dependencies": {
        "q": "^1.2.0",
        "plex-api": "^3.2.0",
        "plex-api-credentials": "^2.0.0",
        "lunr": "^0.5.12"
    },
    "permissions": [
        "homey:manager:speech-output",
        "homey:manager:speech-input",
        "homey:manager:ledring"
    ],
    "drivers": [
        {
            "id": "pht",
            "name": {
                "en": "Plex Home Theater",
                "nl": "Plex Home Theater"
            },
            "images": {
                "large": "drivers/pht/assets/large.png",
                "small": "drivers/pht/assets/small.png"
            },
            "class": "plexplayer",
            "capabilities": [ "play", "pause", "stop" ],
            "pair": [
                {
                  "id": "configure_players",
                  "template" : "list_devices",
                  "navigation": {
                        "next": "add_players"
                    }
                },
                
                {
                  "id": "add_players",
                  "template": "add_devices"
                }
            ]
        },
        {
            "id": "chromecast",
            "name": {
                "en": "ChromeCast",
                "nl": "ChromeCast"
            },
            "images": {
                "large": "drivers/chromecast/assets/large.jpg",
                "small": "drivers/chromecast/assets/small.jpg"
            },
            "class": "plexplayer",
            "capabilities": [ "play", "pause", "stop" ],
            "pair": [
                {
                  "id": "configure_players",
                  "template" : "list_devices",
                  "navigation": {
                        "next": "add_players"
                    }
                },
                
                {
                  "id": "add_players",
                  "template": "add_devices"
                }
            ]
        }
    ],
    "flow": {
        "triggers": [
            {
                "id" : "media_start",
                "title": { 
                    "en": "Plex starts playing"
                }
            },
            {
               "id" : "media_stop",
                "title": { 
                    "en": "Plex stops playing"
                } 
            }

        ],
        "actions": [
            {
                "id": "playitemchrome",
                "title": {
                    "en": "Play Plex Media",
                    "nl": "Speel Plex Media"
                },
                "fluidArgs": true,
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:nl.kikkert.plex&driver_id=chromecast"
                    },
                    {
                        "name": "selected",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "Find a media item"
                        }
                    }
                ]
            },
            {
                "id": "playitempht",
                "title": {
                    "en": "Play Plex Media",
                    "nl": "Speel Plex Media"
                },
                "fluidArgs": true,
                "args": [
                    {
                        "name": "device",
                        "type": "device",
                        "filter": "driver_uri=homey:app:nl.kikkert.plex&driver_id=pht"
                    },
                    {
                        "name": "selected",
                        "type": "autocomplete",
                        "placeholder": {
                            "en": "Find a media item"
                        }
                    }
                ]
            }
        ]
    },
    "speech": [
        {
            "id": "app|plex",
            "importance": 1,
            "triggers": {
                "en": [
                    "plex"
                ],
                "nl": [
                    "plex"
                ]
            }
        },
        {
            "id": "command|watch",
            "importance": 0.8,
            "triggers": {
                "en": [
                    "watch",
                    "watch a movie",
                    "watch a series",
                    "plex",
                    "view",
                    "which",
                    "what",
                    "play"
                ],
                "nl": [
                    "kijken",
                    "film kijken",
                    "serie kijken",
                    "plex"
                ]
            }
        },
        {
            "id": "command|watchnextepisode",
            "importance": 0.8,
            "triggers": {
                "en": [
                    "next episode",
                    "next episodes"
                ],
                "nl": [
                    "volgende aflevering",
                    "1 aflevering verder"
                ]
            }
        },
        {
            "id": "command|watchpreviousepisode",
            "importance": 0.8,
            "triggers": {
                "en": [
                    "previous episode",
                    "previous episodes"
                ],
                "nl": [
                    "vorige aflevering kijken",
                    "1 aflevering terug"
                ]
            }
        },
        {
            "id": "command|latest",
            "importance": 0.5,
            "triggers": {
                "en": [
                    "latest",
                    "newest"
                ],
                "nl": [
                    "laatste",
                    "nieuwste"
                ]
            }
        },
        {
            "id": "command|first",
            "importance": 0.5,
            "triggers": {
                "en": [
                    "first",
                    "oldest"
                ],
                "nl": [
                    "eerste",
                    "oudste"
                ]
            }
        },

        {
            "id": "command|random",
            "importance": 0.5,
            "triggers": {
                "en": [
                    "random"
                ],
                "nl": [
                    "willekeurige"
                ]
            }
        },
		{
            "id": "command|refresh",
            "importance": 0.8,
            "triggers": {
                "en": [
                    "media refresh",
                    "refresh media"
                ],
                "nl": [
                    "media verversen"
                ]
            }
        },
        {
            "id": "command|pause",
            "importance": 0.5,
            "triggers": {
                "en": [
