                ]
            }
        },
        {
            "id": "command|continue",
            "importance": 0.5,
            "triggers": {
                "en": [
                    "movie continue",
                    "movie play",
                    "movieplay"
                ],
                "nl": [
                    "film verder",
                    "film ga verder",
                    "film vervolgen"
                ]
            }
        },
        {
            "id": "command|stop",
            "importance": 0.8,
            "triggers": {
                "en": [
                    "movie stop",
                    "moviestop",
                    "plex stop",
                    "movie star",
                    "stop movie",
                    "stop the movie",
                    "stop watching",
                    "watch stop",
                    "stop",
